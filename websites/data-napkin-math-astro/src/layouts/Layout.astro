---
import NetworkFooter from '../../../../helpers/astro/NetworkFooter.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="navbar">
      <a class="navbar-brand" href="/">Data Napkin Math</a>
      <ul class="navbar-nav">
        <li><a class="nav-link" href="/#napkinMath">Scenarios</a></li>
        <li><a class="nav-link" href="/#aboutContent">About</a></li>
        <li><a class="nav-link" href="/discussions">Discussions</a></li>
        <li><a class="nav-link" href="https://github.com/nickmvincent/data_napkin_math" target="_blank">GitHub</a></li>
      </ul>
    </nav>
    <slot />
    <NetworkFooter
      links={[
        { href: 'https://datalicenses.org', label: 'Data Licenses' },
        { href: 'https://datacounterfactuals.org', label: 'Data Counterfactuals' },
        { href: 'https://sharedreferences.pages.dev', label: 'Shared References' },
        { href: 'https://extenote.pages.dev', label: 'ExteNote Docs' },
      ]}
    />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';

  .network-footer {
    margin-top: 3rem;
    padding: 1.5rem;
    border-top: 1px dashed var(--border-color);
    background: var(--paper);
    text-align: center;
    font-size: 0.875rem;
  }
  .network-footer-content {
    max-width: 800px;
    margin: 0 auto;
  }
  .network-label {
    color: var(--dark-gray);
    margin-right: 0.5rem;
  }
  .network-links {
    display: inline;
  }
  .network-links a {
    color: var(--primary-color);
    text-decoration: none;
    margin: 0 0.5rem;
  }
  .network-links a:hover {
    text-decoration: underline;
  }
</style>
