---
import '../styles/global.css';
import NetworkFooter from '../../../../helpers/astro/NetworkFooter.astro';

interface Props {
  title?: string;
}

const { title = 'Data Leverage References' } = Astro.props;
---

<!doctype html>
<html lang="en" data-mode="dark" data-aesthetic="classic">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=JetBrains+Mono:wght@400;500;600;700&family=Orbitron:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script is:inline>
      // Load theme preferences before render to prevent flash
      (function() {
        const mode = localStorage.getItem('theme-mode') || 'dark';
        const aesthetic = localStorage.getItem('theme-aesthetic') || 'classic';
        document.documentElement.setAttribute('data-mode', mode);
        document.documentElement.setAttribute('data-aesthetic', aesthetic);
      })();
    </script>
  </head>
  <body>
    <header>
      <h1><a href="/">Data Leverage References</a></h1>
      <div class="ornament"></div>
      <nav>
        <a href="/">browse</a>
        <span class="nav-dot">路</span>
        <a href="/collections">collections</a>
        <span class="nav-dot">路</span>
        <a href="/projects">projects</a>
        <span class="nav-dot">路</span>
        <a href="/discussions">discussions</a>
        <span class="nav-dot">路</span>
        <a href="/stats">stats</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <div class="divider"></div>
      <NetworkFooter
        links={[
          { href: 'https://datalicenses.org', label: 'Data Licenses' },
          { href: 'https://datacounterfactuals.org', label: 'Data Counterfactuals' },
          { href: 'https://exploringai.org', label: 'Data Napkin Math' },
          { href: 'https://extenote.pages.dev', label: 'ExteNote Docs' },
        ]}
      />
      <div class="theme-controls">
        <div class="theme-toggle">
          <span class="toggle-label">Mode:</span>
          <button class="toggle-btn" data-mode="light" id="mode-light">Light</button>
          <button class="toggle-btn" data-mode="dark" id="mode-dark">Dark</button>
        </div>
        <div class="theme-toggle">
          <span class="toggle-label">Style:</span>
          <button class="toggle-btn" data-aesthetic="classic" id="aesthetic-classic">Classic</button>
          <button class="toggle-btn" data-aesthetic="futuristic" id="aesthetic-futuristic">Cyber</button>
        </div>
      </div>
    </footer>
  </body>
</html>

<script>
  // Theme toggle functionality
  function initThemeToggle() {
    const html = document.documentElement;

    // Update button states
    function updateButtons() {
      const mode = html.getAttribute('data-mode');
      const aesthetic = html.getAttribute('data-aesthetic');

      document.querySelectorAll('.toggle-btn[data-mode]').forEach(btn => {
        btn.classList.toggle('active', btn.getAttribute('data-mode') === mode);
      });

      document.querySelectorAll('.toggle-btn[data-aesthetic]').forEach(btn => {
        btn.classList.toggle('active', btn.getAttribute('data-aesthetic') === aesthetic);
      });
    }

    // Mode toggle
    document.getElementById('mode-light')?.addEventListener('click', () => {
      html.setAttribute('data-mode', 'light');
      localStorage.setItem('theme-mode', 'light');
      updateButtons();
    });

    document.getElementById('mode-dark')?.addEventListener('click', () => {
      html.setAttribute('data-mode', 'dark');
      localStorage.setItem('theme-mode', 'dark');
      updateButtons();
    });

    // Aesthetic toggle
    document.getElementById('aesthetic-classic')?.addEventListener('click', () => {
      html.setAttribute('data-aesthetic', 'classic');
      localStorage.setItem('theme-aesthetic', 'classic');
      updateButtons();
    });

    document.getElementById('aesthetic-futuristic')?.addEventListener('click', () => {
      html.setAttribute('data-aesthetic', 'futuristic');
      localStorage.setItem('theme-aesthetic', 'futuristic');
      updateButtons();
    });

    // Initialize button states
    updateButtons();
  }

  // Run on page load
  initThemeToggle();

  // Also run after Astro page transitions (if using View Transitions)
  document.addEventListener('astro:after-swap', initThemeToggle);
</script>

<style is:global>
  .nav-dot {
    color: var(--border-ornate);
  }

  .site-footer {
    margin-top: 3rem;
    padding-bottom: 2rem;
  }

  .network-footer {
    padding: 1.5rem;
    text-align: center;
    font-size: 0.9rem;
  }

  .network-footer-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .network-label {
    color: var(--text-muted);
    margin-right: 0.5rem;
    font-style: italic;
  }

  .network-links {
    display: inline;
  }

  .network-links a {
    color: var(--accent);
    text-decoration: none;
    margin: 0 0.75rem;
  }

  .network-links a:hover {
    color: var(--accent-hover);
    text-decoration: underline;
    text-decoration-style: dotted;
  }

  /* Theme controls */
  .theme-controls {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px dotted var(--border);
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .toggle-label {
    font-size: 0.7rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .toggle-btn {
    background: var(--bg-inset);
    border: 1px solid var(--border);
    padding: 0.3rem 0.6rem;
    font-family: inherit;
    font-size: 0.7rem;
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.2s;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  [data-aesthetic="classic"] .toggle-btn {
    border-radius: 2px;
  }

  [data-aesthetic="futuristic"] .toggle-btn {
    border-radius: 0;
    font-family: var(--font-mono);
  }

  .toggle-btn:hover {
    background: var(--accent);
    color: var(--text-light);
    border-color: var(--accent);
  }

  .toggle-btn.active {
    background: var(--accent);
    color: var(--text-light);
    border-color: var(--accent);
  }

  [data-aesthetic="futuristic"][data-mode="dark"] .toggle-btn:hover,
  [data-aesthetic="futuristic"][data-mode="dark"] .toggle-btn.active {
    box-shadow: 0 0 10px var(--accent);
  }

  @media (max-width: 600px) {
    .theme-controls {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>
