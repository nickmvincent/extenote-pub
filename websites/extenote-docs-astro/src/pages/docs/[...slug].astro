---
import { getCollection, render } from 'astro:content';
import Layout from "../../layouts/Base.astro";
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  return docs.map(doc => ({
    params: { slug: doc.id },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await render(doc);
const base = import.meta.env.BASE_URL;

// Get all docs for sidebar
const allDocs = await getCollection('docs');
const sortedDocs = allDocs
  .filter(d => d.data.visibility !== 'private')
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
---

<Layout
  title={doc.data.title}
  description={`Extenote documentation: ${doc.data.title}`}
>

<style>
  .docs-layout {
    display: flex;
    max-width: 1200px;
    margin: 0 auto;
  }

  .sidebar {
    width: 240px;
    flex-shrink: 0;
    padding: 2rem 1rem 2rem 2rem;
    border-right: 1px solid var(--border);
    position: sticky;
    top: 0;
    height: 100vh;
    overflow-y: auto;
  }

  [data-aesthetic="futuristic"] .sidebar {
    border-right: 1px solid var(--border-ornate);
  }

  .sidebar-section {
    margin-bottom: 1.5rem;
  }

  .sidebar-title {
    font-family: var(--font-heading);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  [data-aesthetic="futuristic"] .sidebar-title {
    letter-spacing: 0.2em;
  }

  .sidebar-links {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .sidebar-link {
    display: block;
    padding: 0.35rem 0.5rem;
    color: var(--text-muted);
    font-size: 0.85rem;
    text-decoration: none;
    transition: color 0.15s, border-color 0.15s;
    border-left: 2px solid transparent;
    margin-left: -0.5rem;
    padding-left: 0.5rem;
  }

  [data-aesthetic="futuristic"] .sidebar-link {
    font-size: 0.8rem;
    letter-spacing: 0.02em;
  }

  .sidebar-link:hover {
    color: var(--text);
    text-decoration: none;
  }

  [data-aesthetic="futuristic"][data-mode="dark"] .sidebar-link:hover {
    text-shadow: 0 0 5px var(--accent);
  }

  .sidebar-link.active {
    color: var(--accent);
    border-left-color: var(--accent);
  }

  [data-aesthetic="futuristic"][data-mode="dark"] .sidebar-link.active {
    text-shadow: 0 0 8px var(--accent);
  }

  .content {
    flex: 1;
    min-width: 0;
    padding: 2.5rem 3rem 4rem;
    max-width: 760px;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  [data-aesthetic="futuristic"] .back-link {
    font-size: 0.8rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .content h1 {
    font-family: var(--font-heading);
    font-size: 2.2rem;
    margin-bottom: 2rem;
    padding-bottom: 1.25rem;
    border-bottom: 1px solid var(--border);
    font-weight: 600;
    line-height: 1.3;
  }

  [data-aesthetic="futuristic"] .content h1 {
    font-size: 1.8rem;
    letter-spacing: 0.1em;
    border-bottom: 1px solid var(--border-ornate);
  }

  [data-aesthetic="futuristic"][data-mode="dark"] .content h1 {
    text-shadow: 0 0 15px var(--accent);
  }

  .content h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
    color: var(--text);
    font-weight: 600;
    line-height: 1.35;
  }

  [data-aesthetic="futuristic"] .content h2 {
    font-size: 1.3rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    border-bottom-color: var(--border-ornate);
  }

  .content h3 {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    margin-top: 2.25rem;
    margin-bottom: 1rem;
    color: var(--text);
    font-weight: 600;
    line-height: 1.4;
  }

  [data-aesthetic="futuristic"] .content h3 {
    font-size: 1.05rem;
    letter-spacing: 0.05em;
  }

  .content p {
    margin-bottom: 1.5rem;
    color: var(--text);
    line-height: 1.85;
  }

  /* Tighten spacing when paragraph directly precedes a list */
  .content p + ul,
  .content p + ol {
    margin-top: -0.5rem;
  }

  .content ul, .content ol {
    margin-bottom: 1.75rem;
    padding-left: 1.75rem;
    color: var(--text);
    line-height: 1.75;
  }

  .content li {
    margin-bottom: 0.5rem;
    padding-left: 0.25rem;
  }

  .content li:last-child {
    margin-bottom: 0;
  }

  .content li::marker {
    color: var(--accent);
  }

  /* Nested lists */
  .content li ul,
  .content li ol {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Space after headings before content */
  .content h2 + p,
  .content h3 + p {
    margin-top: 0;
  }

  .content h2 + ul,
  .content h2 + ol,
  .content h3 + ul,
  .content h3 + ol {
    margin-top: 0.5rem;
  }

  /* Images - thumbnail style with lightbox */
  .content img {
    max-width: 480px;
    height: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    display: block;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .content img:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  [data-aesthetic="futuristic"] .content img {
    border-radius: 0;
    border: 1px solid var(--border-ornate);
  }

  [data-aesthetic="futuristic"][data-mode="dark"] .content img {
    box-shadow: 0 4px 20px rgba(0, 212, 255, 0.1);
  }

  [data-aesthetic="futuristic"][data-mode="dark"] .content img:hover {
    box-shadow: 0 6px 30px rgba(0, 212, 255, 0.2);
  }

  [data-aesthetic="classic"][data-mode="dark"] .content img {
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.25);
  }

  [data-aesthetic="classic"][data-mode="dark"] .content img:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.35);
  }

  /* Lightbox overlay */
  .lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    cursor: zoom-out;
    padding: 2rem;
  }

  .lightbox.active {
    display: flex;
  }

  .lightbox img {
    max-width: 95%;
    max-height: 95vh;
    border-radius: 4px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.5);
  }

  [data-aesthetic="futuristic"] .lightbox img {
    border-radius: 0;
    border: 1px solid var(--accent);
    box-shadow: 0 0 40px rgba(0, 212, 255, 0.3);
  }

  .lightbox-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-size: 2rem;
    color: #fff;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s;
    background: none;
    border: none;
    font-family: var(--font-body);
  }

  .lightbox-close:hover {
    opacity: 1;
  }

  .lightbox-hint {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.8rem;
    letter-spacing: 0.05em;
  }

  .content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.95rem;
  }

  .content th, .content td {
    padding: 0.875rem 1rem;
    text-align: left;
    border: 1px solid var(--border);
  }

  [data-aesthetic="futuristic"] .content th,
  [data-aesthetic="futuristic"] .content td {
    border-color: var(--border-ornate);
  }

  .content th {
    background: var(--bg-inset);
    color: var(--text);
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.9rem;
  }

  [data-aesthetic="futuristic"] .content th {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.8rem;
  }

  .content td {
    color: var(--text);
  }

  .content tr:nth-child(even) td {
    background: var(--bg-inset);
  }

  .content strong {
    color: var(--text);
    font-weight: 600;
  }

  .content blockquote {
    border-left: 4px solid var(--border-ornate);
    padding: 1.25rem 1.5rem;
    margin: 2rem 0;
    color: var(--text-muted);
    background: var(--bg-inset);
    line-height: 1.7;
  }

  .content blockquote p {
    margin-bottom: 0.75rem;
  }

  .content blockquote p:last-child {
    margin-bottom: 0;
  }

  [data-aesthetic="classic"] .content blockquote {
    font-style: italic;
  }

  [data-aesthetic="futuristic"] .content blockquote {
    border-left: 4px solid var(--accent);
  }

  [data-aesthetic="futuristic"][data-mode="dark"] .content blockquote {
    box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.3);
  }

  /* Code blocks - enhanced */
  .content pre {
    margin: 2rem 0;
    padding: 1.25rem 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    line-height: 1.5;
  }

  .content pre code {
    font-size: 0.875rem;
  }

  /* Reduce margin when code block follows a paragraph ending with colon */
  .content p + pre {
    margin-top: 1rem;
  }

  [data-aesthetic="futuristic"] .content pre {
    border-radius: 0;
  }

  .content a {
    color: var(--accent);
  }

  .content a:hover {
    color: var(--accent-hover);
  }

  /* Horizontal rules */
  .content hr {
    border: none;
    border-top: 1px solid var(--border);
    margin: 3rem 0;
  }

  [data-aesthetic="futuristic"] .content hr {
    border-top-color: var(--border-ornate);
  }

  @media (max-width: 900px) {
    .sidebar {
      display: none;
    }

    .content {
      padding: 1.5rem;
    }

    .content h1 {
      font-size: 1.8rem;
    }

    .content h2 {
      font-size: 1.3rem;
      margin-top: 2.5rem;
    }

    .content img {
      max-width: 100%;
      margin: 1.25rem 0;
    }
  }
</style>

<Nav />

<div class="docs-layout">
  <aside class="sidebar">
    <div class="sidebar-section">
      <div class="sidebar-title">Getting Started</div>
      <nav class="sidebar-links">
        {sortedDocs.filter(d => [0, 1].includes(d.data.order ?? 99)).map(d => (
          <a href={`${base}/docs/${d.id}`} class={`sidebar-link ${d.id === doc.id ? 'active' : ''}`}>
            {d.data.title}
          </a>
        ))}
      </nav>
    </div>
    <div class="sidebar-section">
      <div class="sidebar-title">Reference</div>
      <nav class="sidebar-links">
        {sortedDocs.filter(d => [2, 3, 4, 5].includes(d.data.order ?? 99)).map(d => (
          <a href={`${base}/docs/${d.id}`} class={`sidebar-link ${d.id === doc.id ? 'active' : ''}`}>
            {d.data.title}
          </a>
        ))}
      </nav>
    </div>
    <div class="sidebar-section">
      <div class="sidebar-title">Features</div>
      <nav class="sidebar-links">
        {sortedDocs.filter(d => [6, 7, 8].includes(d.data.order ?? 99)).map(d => (
          <a href={`${base}/docs/${d.id}`} class={`sidebar-link ${d.id === doc.id ? 'active' : ''}`}>
            {d.data.title}
          </a>
        ))}
      </nav>
    </div>
    <div class="sidebar-section">
      <div class="sidebar-title">Other</div>
      <nav class="sidebar-links">
        {sortedDocs.filter(d => [9, 10].includes(d.data.order ?? 99)).map(d => (
          <a href={`${base}/docs/${d.id}`} class={`sidebar-link ${d.id === doc.id ? 'active' : ''}`}>
            {d.data.title}
          </a>
        ))}
      </nav>
    </div>
  </aside>

  <main class="content">
    <a href={`${base}/docs`} class="back-link">‚Üê All Docs</a>
    <Content />
  </main>
</div>

<Footer />

<!-- Lightbox for images -->
<div class="lightbox" id="lightbox">
  <button class="lightbox-close" aria-label="Close">&times;</button>
  <img src="" alt="" id="lightbox-img" />
  <div class="lightbox-hint">Click anywhere or press Escape to close</div>
</div>

<script>
  // Lightbox functionality
  document.addEventListener('DOMContentLoaded', () => {
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img');
    const lightboxClose = document.querySelector('.lightbox-close');

    // Open lightbox when clicking content images
    document.querySelectorAll('.content img').forEach(img => {
      img.addEventListener('click', () => {
        lightboxImg.src = img.src;
        lightboxImg.alt = img.alt;
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });

    // Close lightbox
    const closeLightbox = () => {
      lightbox.classList.remove('active');
      document.body.style.overflow = '';
    };

    lightbox.addEventListener('click', closeLightbox);
    lightboxClose.addEventListener('click', closeLightbox);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && lightbox.classList.contains('active')) {
        closeLightbox();
      }
    });

    // Prevent closing when clicking on the image itself
    lightboxImg.addEventListener('click', (e) => e.stopPropagation());
  });
</script>

</Layout>
