---
const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
---

<header class="top-nav">
  <div class="brand">
    <a href={base}>Extenote</a>
  </div>
  <div class="nav-ornament"></div>
  <nav class="nav-links">
    <a href={base} aria-current={currentPath === base || currentPath === base + '/' ? 'page' : undefined}>home</a>
    <span class="nav-dot"></span>
    <a href={`${base}/docs`} aria-current={currentPath.startsWith(`${base}/docs`) ? 'page' : undefined}>docs</a>
    <span class="nav-dot"></span>
    <a href="https://github.com/nickmvincent/extenote" target="_blank">github</a>
  </nav>
</header>
